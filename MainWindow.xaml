<Window x:Class="MusicApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicApplication"
        mc:Ignorable="d"
        Title="MusicApp" Height="450" Width="800">
    <Grid Background="#FF000200">
        <!-- Верхняя панель с названием приложения и иконкой пользователя -->
        <DockPanel VerticalAlignment="Center" Height="434" Background="#1F1F1F" Margin="0,0,633,0">
            <TextBlock Text="IzMusic" Foreground="White" FontSize="18" FontWeight="Bold" Margin="10,10,0,0" VerticalAlignment="Top" />
        </DockPanel>


        <MediaElement x:Name="gif" MediaEnded="gif_MediaEnded" HorizontalAlignment="Center" Height="400" UnloadedBehavior="Manual" VerticalAlignment="Top" Width="400" Source="necessary-disorder tutorials.gif" Margin="0,50,0,0"/>

        <!-- Информация о треке и исполнителе -->

        <!-- Панель управления проигрывателем -->

        <!-- Прогресс трека -->
        <Slider Minimum="0" Maximum="100" Value="40" Width="300" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,380,0,0" Background="#404040" Foreground="#FF5A5F" />
        <StackPanel VerticalAlignment="Top" Margin="0,280,0,0">
            <TextBlock Text="Название трека" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Исполнитель" Foreground="#AAAAAA" FontSize="14" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,340,0,0">
            <Button
        Width="40" FontSize="24" Foreground="White" Content="⏮" Click="OnPreviousClick" BorderBrush="Transparent" Background="Transparent"/>
            <Button
        Width="40" FontSize="24" Foreground="White" Content="⏯" Click="OnPlayPauseClick" BorderBrush="Transparent" Background="Transparent"/>
            <Button Content="⏭" FontSize="24" Background="Transparent" Foreground="White" BorderBrush="Transparent" Width="40" Click="OnNextClick"/>
        </StackPanel>

    </Grid>
</Window>
